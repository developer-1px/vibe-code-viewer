@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    /* ===== LIMN Design System Tokens ===== */

    /* Spacing Scale */
    --limn-space-0: 0;
    --limn-space-1: 4px;
    --limn-space-2: 6px;
    --limn-space-3: 8px;
    --limn-space-4: 10px;
    --limn-space-5: 12px;
    --limn-space-6: 14px;
    --limn-space-7: 16px;
    --limn-space-8: 20px;
    --limn-space-9: 24px;
    --limn-space-10: 32px;
    --limn-space-11: 40px;
    --limn-space-12: 48px;

    /* Layout Dimensions - Compact for Desktop */
    --limn-titlebar-height: 32px;
    --limn-statusbar-height: 22px;
    --limn-activity-bar-width: 44px;
    --limn-activity-bar-icon: 32px;
    --limn-sidebar-width: 240px;
    --limn-sidebar-min: 180px;
    --limn-sidebar-max: 360px;
    --limn-tab-height: 32px;
    --limn-file-item-height: 24px;
    --limn-breadcrumb-height: 28px;
    --limn-indent: 12px;

    /* Background */
    --limn-bg-deep: #0d0d12;
    --limn-bg-base: #0f0f16;
    --limn-bg-surface: rgba(20, 20, 28, 0.95);
    --limn-bg-elevated: #14141c;
    --limn-bg-overlay: rgba(0, 0, 0, 0.6);

    /* Warm Accent */
    --limn-warm-50: #fffaf5;
    --limn-warm-100: #fff8f0;
    --limn-warm-200: #ffeedd;
    --limn-warm-300: #ffcc99;
    --limn-warm-400: rgba(255, 200, 150, 0.9);
    --limn-warm-500: rgba(255, 180, 120, 0.8);
    --limn-warm-glow: rgba(255, 180, 120, 0.15);

    /* Text */
    --limn-text-primary: rgba(255, 240, 220, 0.95);
    --limn-text-secondary: rgba(255, 250, 245, 0.7);
    --limn-text-tertiary: rgba(255, 250, 245, 0.5);
    --limn-text-muted: rgba(255, 250, 245, 0.35);
    --limn-text-faint: rgba(255, 250, 245, 0.2);

    /* Border */
    --limn-border-subtle: rgba(255, 255, 255, 0.04);
    --limn-border-default: rgba(255, 255, 255, 0.06);
    --limn-border-light: rgba(255, 255, 255, 0.08);
    --limn-border-medium: rgba(255, 255, 255, 0.1);
    --limn-border-warm: rgba(255, 200, 150, 0.2);
    --limn-border-active: rgba(255, 200, 150, 0.3);

    /* Status */
    --limn-status-success: #4ade80;
    --limn-status-success-bg: rgba(74, 222, 128, 0.1);
    --limn-status-warning: #fbbf24;
    --limn-status-warning-bg: rgba(251, 191, 36, 0.1);
    --limn-status-error: #f87171;
    --limn-status-error-bg: rgba(248, 113, 113, 0.1);
    --limn-status-info: #60a5fa;

    /* Radius */
    --limn-radius-xs: 2px;
    --limn-radius-sm: 4px;
    --limn-radius-md: 6px;
    --limn-radius-lg: 8px;
    --limn-radius-xl: 10px;
    --limn-radius-2xl: 12px;
    --limn-radius-3xl: 14px;
    --limn-radius-4xl: 16px;
    --limn-radius-full: 9999px;

    /* Animation */
    --limn-duration-instant: 0ms;
    --limn-duration-fast: 100ms;
    --limn-duration-normal: 200ms;
    --limn-duration-slow: 300ms;
    --limn-duration-slower: 500ms;
    --limn-duration-slowest: 1000ms;
    --limn-ease: cubic-bezier(0.4, 0, 0.2, 1);

    /* Glow */
    --limn-glow-sm: 0 0 8px rgba(255, 200, 150, 0.6);
    --limn-glow-md: 0 0 12px rgba(255, 200, 150, 0.5);
    --limn-glow-lg: 0 0 24px rgba(255, 180, 120, 0.3);
    --limn-glow-xl: 0 0 40px rgba(255, 180, 120, 0.15);
    --limn-glow-success: 0 0 8px rgba(74, 222, 128, 0.5);
    --limn-glow-warning: 0 0 8px rgba(251, 191, 36, 0.5);
    --limn-glow-error: 0 0 8px rgba(248, 113, 113, 0.5);

    /* Shadows */
    --limn-shadow-sm: 0 4px 16px rgba(0, 0, 0, 0.2);
    --limn-shadow-md: 0 8px 32px rgba(0, 0, 0, 0.3);
    --limn-shadow-lg: 0 16px 48px rgba(0, 0, 0, 0.4);
    --limn-shadow-xl: 0 24px 80px rgba(0, 0, 0, 0.5);

    /* Code Editor Syntax - VS Code Dark+ Style (Universal) */
    --code-keyword: #569cd6;        /* Blue for keywords (const, class, return) */
    --code-function: #dcdcaa;       /* Yellow for functions */
    --code-class: #4ec9b0;          /* Teal/Cyan for classes */
    --code-variable: #9cdcfe;       /* Light blue for variables */
    --code-string: #ce9178;         /* Orange for strings */
    --code-number: #b5cea8;         /* Light green for numbers */
    --code-comment: #6a9955;        /* Green for comments */
    --code-property: #9cdcfe;       /* Light blue for properties */
    --code-tag: #569cd6;            /* Blue for JSX tags */
    --code-attribute: #9cdcfe;      /* Light blue for attributes */
    --code-punctuation: #d4d4d4;    /* Light gray for punctuation */
  }

  * {
    @apply border-border;
  }

  body {
    @apply bg-bg-deep text-text-secondary font-sans text-base;
    font-feature-settings: "rlig" 1, "calt" 1;
  }
}

@layer utilities {
  .label {
    @apply text-2xs uppercase tracking-widest text-text-muted;
    letter-spacing: 0.1em;
  }

  .active-glow {
    background: linear-gradient(
      145deg,
      rgba(255, 200, 150, 0.12) 0%,
      rgba(255, 180, 120, 0.06) 100%
    );
    border: 1px solid rgba(255, 200, 150, 0.3);
    box-shadow: 0 0 40px rgba(255, 180, 120, 0.1);
  }
}
